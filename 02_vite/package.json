{
  "name": "vite-ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "server": "tsx src/server.ts",
    "dev": "vite",
    "start": "node ./dist/server.js",
    "build": "npm run build:app && npm run build:views && npm run build:server",
    "build:app": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:views": "vite build --ssr \"../views/entry-server.tsx\" --outDir \"../../dist/views\""
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/express": "^5.0.3",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7"
  }
}